<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundMyApp"
    android:visibility="visible"
    android:padding="2dp"
    tools:context=".fragments.fragment_titles"
    >

    <TextView
        android:id="@+id/serverlist_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/serverlist"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryGreen"
        android:textSize="36sp"
        android:textStyle="italic"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/but_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/list"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@id/but_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_vertical_margin"

        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#66EB00"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/serverlist_text"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="24dp"
        app:rippleColor="#040202"
        tools:ignore="ContentDescription" />
    <!--<Button
        android:id="@+id/but_add"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="28dp"
        android:ellipsize="middle"
        android:onClick="onClickAdd"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/serverlist_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />-->

    <ListView
        android:id="@+id/list"
        android:headerDividersEnabled="true"
        android:scrollbars="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="11"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serverlist_text"
        />
</androidx.constraintlayout.widget.ConstraintLayout>